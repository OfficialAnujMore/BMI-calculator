<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EntryActivity"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/tvEntryLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:text="" />

    <TextView
        android:id="@+id/tvEntryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@color/Black"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvEntryHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Height "
        android:textAlignment="center"
        android:layout_marginTop="10dp"

        android:textSize="40dp"
        android:textColor="@color/Black"

        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvEntryFeets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feets"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spfeets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tvEntryInches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:text="Inches"
        android:textStyle="bold"
        android:textColor="@color/Black"/>

    <Spinner
        android:id="@+id/spinches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/tvEntryWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight"

        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/Black"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/etEntryWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Weight in Kg"
        android:layout_marginLeft="20dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnEntryCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Calculate"
        android:background="@color/colorPrimary"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>


    <Button
        android:id="@+id/btnEntryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/Black"
        android:text="View History"
        android:background="@color/colorPrimary"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        />

    <TextView
        android:id="@+id/tvEntryData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />



</LinearLayout>